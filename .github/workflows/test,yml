name: td-cache-test
on: [push]

jobs:
  container-job:
    runs-on: ubuntu-latest
    container: bluetab/elixir:1.10.4-alpine-20200709084328

    services:
      redis:
        image: library/redis:5.0-alpine
        options: >-
          --health-cmd "redis-cli ping"
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5

    steps:
      - uses: actions/checkout@v2
      - uses: erlef/setup-elixir@v1
        with:
          otp-version: '22:2'
          elixir-version: '1.10.1'
      - run: mix deps.get
      - run: mix credo --strict
      - run: mix test